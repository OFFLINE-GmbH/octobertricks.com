.main
    lost-utility clearfix
    font-size 1.6rem
    min-height 400px
    min-height 40vh
    padding 8rem 0

.content
    lost-column 9 / 12 2 2rem
    +below('m')
        lost-column 1 / 1

    &--no-sidebar
        width 80rem
        flex-basis 80rem
        max-width 100%
        margin-left auto !important
        margin-right auto !important

        &--wide
            width 90rem
            flex-basis 90rem

    &--pull-up
        margin-top -11rem

    &--full-width
        lost-column 1 / 1

    +below('m')
        &--order-first-mobile
            order -10
            margin-bottom 2rem

    ol, ul
        margin 0
        padding 0

        &:not(:last-child)
            margin-bottom 2rem

    li
        margin 0 0 1rem 1.9rem
        padding 0
        list-style disc

        &:last-child
            margin-bottom 0

    .hljs
        background hsl(216, 33%, 99%)
        border-radius 2px

.message
    background #dbf7ba
    display block
    text-align center
    padding .5em .75em
    border-radius 4px
    color #154734
    font-size 1.4rem

    &--warning
        background #FCEFC7
        color #7C5E10

    &--error
        background #FACDCD
        color #780A0A

    p
        margin 0

.sidebar
    lost-column 3 / 12 2 2rem
    +below('m')
        lost-column 1 / 1
        margin-bottom 2rem

    &__sticky
        position sticky
        top 10rem
        +at('m')
            lost-flex-container row
            .box
                lost-column 1 / 2 2 2rem

                + .box
                    margin 0

.site-wrapper
    background grey-lightest

.pagination
    display flex
    align-items center
    justify-content center
    width 100%

    li
        margin 0 .25rem
        list-style none

    a, span
        background grey-lightest
        padding .3rem 1rem
        display inline-block
        border-radius 2px
        color grey-dark

    .active
        a, span
            color primary-darker
            background primary-lightest

    .disabled
        a, span
            opacity 0


.well
    display block
    background grey-lightest
    padding 4rem
    margin-bottom 2rem
    text-align center
    line-height 1.3
    color inherit
    transition .2s ease background

    &:hover
        background lighten(grey-lightest, 1)

    &__icon
        margin-bottom 2rem

        svg
            max-width 5rem
            fill grey

    &__heading
        color black
        font-size 2.5
        margin-bottom 1rem

    &__cta
        color grey-dark
        font-size 1.5rem


code:not(.hljs)
    background grey-lightest
    padding .25em .3em
    border-radius 2px
    display inline-block
    line-height 1
    font-size 1.4rem
